# This is Jean-Luc Colombier configuretion file.
# Please if you have an idea to improve this (which shouldn't be very
# hard) let me know at: jean.luc.colombier@gmail.com

config keyboardLayout azerty
#config nudgePercentOf screenSize  (I don't use this)
#config resizePercentOf screenSize (I don't use this)
config orderScreensLeftToRight false
config defaultToCurrentScreen true

# Config focus
config focusCheckWidthMax 3000 (works even with not so close windows)
config focusPreferSameApp false
#config defaultToCurrentScreen true

# Config modal mode
config modalEscapeKey esc

# Config hints (hints has bugs but still useful)
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true
#config windowHintsOrder persist

# Aliases app
alias terminal  'iTerm'
alias editor    ''
alias ide       ''
alias navigator 'Safari'

# Aliases monitor
alias mon_laptop 0
alias mon_extern 1

# Aliases config
alias my_hint hint 1234567890AZERTYUIOPQSDFGHJKLMWXCVBN
alias my_grid grid padding:2 ${mon_laptop}:12,12 ${mon_extern}:12,12

# Aliases position current screen
alias full             move screenOriginX;screenOriginY                             screenSizeX;screenSizeY
alias center           move screenOriginX+screenSizeX/4;screenOriginY+screenSizeY/4 screenSizeX/2;screenSizeY/2
alias center_v         move screenOriginX+screenSizeX/3;screenOriginY               screenSizeX/3;screenSizeY
alias center_h         move screenOriginX;screenOriginY+screenSizeY/3               screenSizeX;screenSizeY/3
alias left_half        move screenOriginX;screenOriginY                             screenSizeX/2;screenSizeY
alias left_third       move screenOriginX;screenOriginY                             screenSizeX/3;screenSizeY
alias left_two_thirds  move screenOriginX;screenOriginY                             2*screenSizeX/3;screenSizeY
alias right_half       move screenOriginX+screenSizeX/2;screenOriginY               screenSizeX/2;screenSizeY
alias right_third      move screenOriginX+2*screenSizeX/3;screenOriginY             screenSizeX/3;screenSizeY
alias right_two_thirds move screenOriginX+screenSizeX/3;screenOriginY               2*screenSizeX/3;screenSizeY
alias up_half          move screenOriginX;screenOriginY                             screenSizeX;screenSizeY/2
alias up_third         move screenOriginX;screenOriginY                             screenSizeX;screenSizeY/3
alias up_two_thirds    move screenOriginX;screenOriginY                             screenSizeX;2*screenSizeY/3
alias down_half        move screenOriginX;screenOriginY+screenSizeY/2               screenSizeX;screenSizeY/2
alias down_third       move screenOriginX;screenOriginY+2*screenSizeY/3             screenSizeX;screenSizeY/3
alias down_two_thirds  move screenOriginX;screenOriginY+screenSizeY/3               screenSizeX;2*screenSizeY/3
alias top_left         move screenOriginX;screenOriginY                             screenSizeX/2;screenSizeY/2
alias top_right        move screenOriginX+screenSizeX/2;screenOriginY               screenSizeX/2;screenSizeY/2
alias bottom_left      move screenOriginX;screenOriginY+screenSizeY/2               screenSizeX/2;screenSizeY/2
alias bottom_right     move screenOriginX+screenSizeX/2;screenOriginY+screenSizeY/2 screenSizeX/2;screenSizeY/2

# Aliases position laptop monitor
alias 1_full             ${full}             ${mon_laptop}
alias 1_center           ${center}           ${mon_laptop}
alias 1_center_v         ${center_v}         ${mon_laptop}
alias 1_center_h         ${center_h}         ${mon_laptop}
alias 1_left_half        ${left_half}        ${mon_laptop}
alias 1_left_third       ${left_third}       ${mon_laptop}
alias 1_left_two_thirds  ${left_two_thirds}  ${mon_laptop}
alias 1_right_half       ${right_half}       ${mon_laptop}
alias 1_right_third      ${right_third}      ${mon_laptop}
alias 1_right_two_thirds ${right_two_thirds} ${mon_laptop}
alias 1_up_half          ${up_half}          ${mon_laptop}
alias 1_up_third         ${up_third}         ${mon_laptop}
alias 1_up_two_thirds    ${up_two_thirds}    ${mon_laptop}
alias 1_down_half        ${down_half}        ${mon_laptop}
alias 1_down_third       ${down_third}       ${mon_laptop}
alias 1_down_two_thirds  ${down_two_thirds}  ${mon_laptop}
alias 1_top_left         ${top_left}         ${mon_laptop}
alias 1_top_right        ${top_right}        ${mon_laptop}
alias 1_bottom_left      ${bottom_left}      ${mon_laptop}
alias 1_bottom_right     ${bottom_right}     ${mon_laptop}

# Aliases position extern monitor
alias 2_full             ${full}             ${mon_extern}
alias 2_center           ${center}           ${mon_extern}
alias 2_center_v         ${center_v}         ${mon_extern}
alias 2_center_h         ${center_h}         ${mon_extern}
alias 2_left_half        ${left_half}        ${mon_extern}
alias 2_left_third       ${left_third}       ${mon_extern}
alias 2_left_two_thirds  ${left_two_thirds}  ${mon_extern}
alias 2_right_half       ${right_half}       ${mon_extern}
alias 2_right_third      ${right_third}      ${mon_extern}
alias 2_right_two_thirds ${right_two_thirds} ${mon_extern}
alias 2_up_half          ${up_half}          ${mon_extern}
alias 2_up_third         ${up_third}         ${mon_extern}
alias 2_up_two_thirds    ${up_two_thirds}    ${mon_extern}
alias 2_down_half        ${down_half}        ${mon_extern}
alias 2_down_third       ${down_third}       ${mon_extern}
alias 2_down_two_thirds  ${down_two_thirds}  ${mon_extern}
alias 2_top_left         ${top_left}         ${mon_extern}
alias 2_top_right        ${top_right}        ${mon_extern}
alias 2_bottom_left      ${bottom_left}      ${mon_extern}
alias 2_bottom_right     ${bottom_right}     ${mon_extern}

# bind moves to laptop monitor
bind s:ctrl;cmd chain ${1_left_half} | ${1_left_two_thirds} | ${1_left_third}
bind d:ctrl;cmd chain ${1_down_half} | ${1_down_third} | ${1_down_two_thirds}
bind e:ctrl;cmd chain ${1_up_half} | ${1_up_two_thirds} | ${1_up_third}
bind f:ctrl;cmd chain ${1_right_half} | ${1_right_third} | ${1_right_two_thirds}
bind c:ctrl;cmd chain ${1_full} | ${1_center_v} | ${1_center_h} | ${1_center}
bind v:ctrl;cmd chain ${1_top_left} | ${1_top_right} | ${1_bottom_left} | ${1_bottom_right}

# bind moves to extern monitor
bind s:shift;ctrl;cmd chain ${2_left_half} | ${2_left_two_thirds} | ${2_left_third}
bind d:shift;ctrl;cmd chain ${2_down_half} | ${2_down_third} | ${2_down_two_thirds}
bind e:shift;ctrl;cmd chain ${2_up_half} | ${2_up_two_thirds} | ${2_up_third}
bind f:shift;ctrl;cmd chain ${2_right_half} | ${2_right_third} | ${2_right_two_thirds}
bind c:shift;ctrl;cmd chain ${2_full} | ${2_center_v} | ${2_center_h} | ${2_center}
bind v:shift;ctrl;cmd chain ${2_top_left} | ${2_top_right} | ${2_bottom_left} | ${2_bottom_right}

# bind focus
bind left:ctrl;cmd   focus left
bind down:ctrl;cmd   focus down
bind up:ctrl;cmd     focus up
bind right:ctrl;cmd  focus right

bind return:ctrl;cmd focus behind

bind j:ctrl;cmd      focus ${terminal}
bind k:ctrl;cmd      focus ${editor}
bind l:ctrl;cmd      focus ${ide}
bind n:ctrl;cmd      focus ${navigator}

# bind hints, grid
bind h:ctrl;cmd ${my_hint}
bind g:ctrl;cmd ${my_grid}

# bind modal
bind s:m;ctrl;cmd:toggle chain ${left_half} | ${left_two_thirds} | ${left_third}
bind d:m;ctrl;cmd:toggle chain ${down_half} | ${down_third} | ${down_two_thirds}
bind e:m;ctrl;cmd:toggle chain ${up_half} | ${up_two_thirds} | ${up_third}
bind f:m;ctrl;cmd:toggle chain ${right_half} | ${right_third} | ${right_two_thirds}
bind c:m;ctrl;cmd:toggle chain ${full} | ${center_v} | ${center_h} | ${center}
bind v:m;ctrl;cmd:toggle chain ${top_left} | ${top_right} | ${bottom_left} | ${bottom_right}

bind left:m;ctrl;cmd:toggle   focus left
bind down:m;ctrl;cmd:toggle   focus down
bind up:m;ctrl;cmd:toggle     focus up
bind right:m;ctrl;cmd:toggle  focus right

bind return:m;ctrl;cmd:toggle focus behind

bind j:m;ctrl;cmd:toggle      focus ${terminal}
bind k:m;ctrl;cmd:toggle      focus ${editor}
bind l:m;ctrl;cmd:toggle      focus ${ide}
bind n:m;ctrl;cmd:toggle      focus ${navigator}